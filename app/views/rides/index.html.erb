<%- model_class = Ride -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
  <div class = pull-right>
    <%= link_to t('.new', :default => t("helpers.links.new")),
              new_ride_path,
              :class => 'btn btn-large btn-primary' %>
  </div></h1>
</div>
<%= form_tag rides_path, method: 'get' do %>
  <div class="form-horizontal">
    <%= text_field_tag :search, params[:search], class: 'input-medium search-query ' %>
    <%= submit_tag "Search", name: nil, class: 'btn btn-default' %>
  </div>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:gpx_file_name) %></th>
      <th><%= model_class.human_attribute_name(:gpx_content_type) %></th>
      <th><%= model_class.human_attribute_name(:gpx_file_size) %></th>
      <th><%= model_class.human_attribute_name(:gpx_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= link_to ride.id, ride_path(ride) %></td>
        <td><%= ride.name %></td>
        <td><%= ride.location %></td>
        <td><%= ride.gpx_file_name %></td>
        <td><%= ride.gpx_content_type %></td>
        <td><%= ride.gpx_file_size %></td>
        <td><%= ride.gpx_updated_at %></td>
        <td><%=l ride.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ride_path(ride), :class => 'btn btn-info' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ride_path(ride),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div id="map_canvas" style="height:600px">
  <script = "text/javascript">
  var gm_init;
  gm_init = function() {
    var gm_center, gm_map_type, map_options;
    gm_center = new google.maps.LatLng(54, 12);
    gm_map_type = google.maps.MapTypeId.ROADMAP;
    map_options = {
      center: gm_center,
      zoom: 8,
      mapTypeId: gm_map_type
    };
    return new google.maps.Map(this.map_canvas, map_options);
  };

    var map;
    map = gm_init();
</script></div>