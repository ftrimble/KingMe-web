<% if current_user %>
<%= form_for @ride, :html => { :class => 'form-horizontal' } do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :gpx, :class => 'control-label' %>
    <%= f.file_field :gpx %>

    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rides_path, :class => 'btn' %>

<% end %>
<% else %>
  <h1> You have to create an account before you can manage a ride!</h1>
  <% end %>