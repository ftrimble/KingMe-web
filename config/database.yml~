development:
  adapter: postgresql
  host: localhost
  encoding: utf8
  database: kingme_dev
  pool: 5
  username: kingme
  password: password
  timeout: 5000

test: &TEST
  adapter: postgresql
  encoding: utf8
  database: kingme_test
  pool: 5
  username: kingme
  password: password

production:
  adapter: postgresql
  encoding: utf8
  database: kingme_prod
  pool: 5
  username: kingme
  password: password


## Warning: The database defined as "test" will be erased and
## re-generated from your development database when you run "rake".
## Do not set this db to the same as development or production.
